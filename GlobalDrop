                "footer.copyright": "–í—Å–µ –ø—Ä–∞–≤–∞ –∑–∞—â–∏—â–µ–Ω—ã. –ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω–æ –≤ –õ–∏—Ç–≤–µ.",

                "admin.title": "–ü–∞–Ω–µ–ª—å –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä–∞ - –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–æ–≤",
                "admin.name": "–ù–∞–∑–≤–∞–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞:",
                "admin.description": "–û–ø–∏—Å–∞–Ω–∏–µ:",
                "admin.price": "–ë–∞–∑–æ–≤–∞—è —Ü–µ–Ω–∞ (‚Ç¨):",
                "admin.shipping": "–°—Ä–æ–∫ –¥–æ—Å—Ç–∞–≤–∫–∏:",
                "admin.image_url": "URL –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è:",
                "admin.icon_hint": "–ò–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∏–∫–æ–Ω–∫—É Font Awesome (–Ω–∞–ø—Ä–∏–º–µ—Ä: fas fa-headphones)",
                "admin.add_button": "–î–æ–±–∞–≤–∏—Ç—å —Ç–æ–≤–∞—Ä",
                "admin.cancel_button": "–û—Ç–º–µ–Ω–∞",
                "admin.admin": "–ê–¥–º–∏–Ω",

                "country.tax_rate": "–ù–∞–ª–æ–≥–æ–≤–∞—è —Å—Ç–∞–≤–∫–∞",
                "country.customs": "–¢–∞–º–æ–∂–Ω—è",
                "country.shipping_cost": "–°—Ç–æ–∏–º–æ—Å—Ç—å –¥–æ—Å—Ç–∞–≤–∫–∏"
            }
        };

        // ========== –ì–õ–û–ë–ê–õ–¨–ù–´–ï –ü–ï–†–ï–ú–ï–ù–ù–´–ï ==========
        let currentLanguage = 'ru'; // –Ø–∑—ã–∫ –∞–¥–º–∏–Ω–∫–∏ –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é - —Ä—É—Å—Å–∫–∏–π
        let currentCountry = 'LT';

        // ========== –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø ==========
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
        });

        function initializeApp() {
            // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
            loadSavedSettings();
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –º–æ–±–∏–ª—å–Ω–æ–≥–æ –º–µ–Ω—é
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const navMenu = document.querySelector('nav ul');
            
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', function() {
                    navMenu.classList.toggle('show');
                });
            }
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ñ–æ—Ä–º—ã –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞
            const addProductForm = document.getElementById('addProductForm');
            if (addProductForm) {
                addProductForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    addNewProduct();
                });
            }
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤—ã–±–æ—Ä–∞ —Å—Ç—Ä–∞–Ω—ã –∏ —è–∑—ã–∫–∞
            document.getElementById('countrySelect').addEventListener('change', function(e) {
                changeCountry(e.target.value);
            });
            
            document.getElementById('languageSelect').addEventListener('change', function(e) {
                changeLanguage(e.target.value);
            });
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Ñ–æ—Ä–º—ã –∫–æ–Ω—Ç–∞–∫—Ç–æ–≤
            setupContactForm();
            
            // –ó–∞–≥—Ä—É–∑–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤
            loadProductsFromStorage();
            
            // –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞
            setupSmoothScroll();
            
            // –ê–Ω–∏–º–∞—Ü–∏—è –ø—Ä–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–µ
            setupScrollAnimations();
        }

        // ========== –°–ò–°–¢–ï–ú–ê –ù–ê–°–¢–†–û–ï–ö ==========
        function loadSavedSettings() {
            const savedLanguage = localStorage.getItem(LANGUAGE_KEY) || 'ru';
            const savedCountry = localStorage.getItem(COUNTRY_KEY) || 'LT';
            
            changeLanguage(savedLanguage);
            changeCountry(savedCountry);
        }

        function changeCountry(countryCode) {
            currentCountry = countryCode;
            localStorage.setItem(COUNTRY_KEY, countryCode);
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–µ–ª–µ–∫—Ç–æ—Ä
            document.getElementById('countrySelect').value = countryCode;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ —Å—Ç—Ä–∞–Ω–µ
            updateCountryInfo();
            
            // –ü–µ—Ä–µ—Å—á–∏—Ç—ã–≤–∞–µ–º —Ü–µ–Ω—ã —Ç–æ–≤–∞—Ä–æ–≤
            updateProductPrices();
        }

        function changeLanguage(lang) {
            currentLanguage = lang;
            localStorage.setItem(LANGUAGE_KEY, lang);
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–µ–ª–µ–∫—Ç–æ—Ä
            document.getElementById('languageSelect').value = lang;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞—Ç—Ä–∏–±—É—Ç lang —É html
            document.documentElement.lang = lang;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –≤—Å–µ —Ç–µ–∫—Å—Ç—ã
            updateAllTexts();
        }

        function updateCountryInfo() {
            const country = countries[currentCountry];
            if (!country) return;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –≤ hero —Å–µ–∫—Ü–∏–∏
            document.getElementById('delivery-days').textContent = country.deliveryDays;
            document.getElementById('taxRate').textContent = country.vat + '%';
            document.getElementById('customsInfo').textContent = country.customs;
            document.getElementById('shippingCost').textContent = country.shippingCost;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –≤–∞–ª—é—Ç—É –≤ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–µ
            document.getElementById('prepayment-amount').textContent = '0' + (country.currency === 'EUR' ? '‚Ç¨' : country.currency);
        }

        function updateProductPrices() {
            const products = getProductsFromStorage();
            
            // –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∂–∞–µ–º —Ç–æ–≤–∞—Ä—ã —Å –Ω–æ–≤—ã–º–∏ —Ü–µ–Ω–∞–º–∏
            const productsGrid = document.getElementById('productsGrid');
            if (productsGrid) {
                productsGrid.innerHTML = '';
            }
            products.forEach(product => addProductToDOM(product));
        }

        function calculateFinalPrice(basePrice) {
            const country = countries[currentCountry];
            const price = parseFloat(basePrice);
            if (isNaN(price)) return '0' + (country.currency === 'EUR' ? '‚Ç¨' : country.currency);
            
            // –î–æ–±–∞–≤–ª—è–µ–º –Ω–∞–ª–æ–≥–∏ (—É–ø—Ä–æ—â–µ–Ω–Ω–∞—è —Ñ–æ—Ä–º—É–ª–∞)
            const finalPrice = price * (1 + country.taxRate);
            return finalPrice.toFixed(2) + (country.currency === 'EUR' ? '‚Ç¨' : country.currency);
        }

        // ========== –°–ò–°–¢–ï–ú–ê –ü–ï–†–ï–í–û–î–û–í ==========
        function updateAllTexts() {
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ–±—ã—á–Ω—ã–µ —Ç–µ–∫—Å—Ç—ã
            document.querySelectorAll('[data-i18n]').forEach(element => {
                const key = element.getAttribute('data-i18n');
                const translation = getTranslation(key);
                if (translation) {
                    element.textContent = translation;
                }
            });
            
            // –û–±–Ω–æ–≤–ª—è–µ–º placeholder'—ã
            document.querySelectorAll('[data-i18n-placeholder]').forEach(element => {
                const key = element.getAttribute('data-i18n-placeholder');
                const translation = getTranslation(key);
                if (translation) {
                    element.placeholder = translation;
                }
            });
        }

        function getTranslation(key) {
            // –ò—â–µ–º –ø–µ—Ä–µ–≤–æ–¥ –≤ —Ç–µ–∫—É—â–µ–º —è–∑—ã–∫–µ
            if (translations[currentLanguage] && translations[currentLanguage][key]) {
                return translations[currentLanguage][key];
            }
            // –ï—Å–ª–∏ –Ω–µ—Ç, –∏—â–µ–º –≤ –∞–Ω–≥–ª–∏–π—Å–∫–æ–º –∫–∞–∫ –∑–∞–ø–∞—Å–Ω–æ–π –≤–∞—Ä–∏–∞–Ω—Ç
            if (translations['en'] && translations['en'][key]) {
                return translations['en'][key];
            }
            // –ï—Å–ª–∏ –ø–µ—Ä–µ–≤–æ–¥–∞ –Ω–µ—Ç, –≤–æ–∑–≤—Ä–∞—â–∞–µ–º –∫–ª—é—á
            return key;
        }

        // ========== –ò–ù–¢–ï–ì–†–ê–¶–ò–Ø FORMSPREE –ò TELEGRAM ==========
        function setupContactForm() {
            const contactForm = document.querySelector('.contact-form');
            if (contactForm) {
                contactForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formData = {
                        name: this.querySelector('input[type="text"]').value,
                        email: this.querySelector('input[type="email"]').value,
                        phone: this.querySelector('input[type="tel"]').value,
                        country: countries[currentCountry].name,
                        language: currentLanguage,
                        timestamp: new Date().toISOString()
                    };

                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = currentLanguage === 'ru' ? '–û—Ç–ø—Ä–∞–≤–∫–∞...' : 'Sending...';
                    submitBtn.disabled = true;
                    submitBtn.classList.add('btn-loading');

                    try {
                        // –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Formspree
                        const response = await fetch(`https://formspree.io/f/${FORMSPREE_ID}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(formData)
                        });

                        if (response.ok) {
                            // –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Telegram
                            await sendTelegramNotification(formData);
                            
                            // –¢—Ä–µ–∫–∏–Ω–≥ –≤ Google Analytics
                            if (typeof gtag !== 'undefined') {
                                gtag('event', 'form_submit', {
                                    'event_category': 'lead',
                                    'event_label': 'contact_form'
                                });
                            }
                            
                            // –°–æ–æ–±—â–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—Ö–µ
                            const message = currentLanguage === 'ru' 
                                ? `–°–ø–∞—Å–∏–±–æ, ${formData.name}! –ú—ã —Å–≤—è–∂–µ–º—Å—è —Å –≤–∞–º–∏ –≤ —Ç–µ—á–µ–Ω–∏–µ 24 —á–∞—Å–æ–≤.`
                                : `Thank you, ${formData.name}! We will contact you within 24 hours.`;
                            alert(message);
                            
                            this.reset();
                        } else {
                            throw new Error('Formspree error');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        const errorMessage = currentLanguage === 'ru'
                            ? '–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –Ω–∞–ø–∏—à–∏—Ç–µ –Ω–∞–º –Ω–∞ support@globaldrop.eu'
                            : 'Sending error. Please email us at support@globaldrop.eu';
                        alert(errorMessage);
                    } finally {
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                        submitBtn.classList.remove('btn-loading');
                    }
                });
            }
        }

        async function sendTelegramNotification(formData) {
            // –ï—Å–ª–∏ –Ω–µ –Ω–∞—Å—Ç—Ä–æ–µ–Ω—ã –∫–ª—é—á–∏ - –ø—Ä–æ–ø—É—Å–∫–∞–µ–º
            if (!TELEGRAM_BOT_TOKEN || TELEGRAM_BOT_TOKEN === 'YOUR_BOT_TOKEN' || 
                !TELEGRAM_CHAT_ID || TELEGRAM_CHAT_ID === 'YOUR_CHAT_ID') {
                console.warn('Telegram credentials not configured');
                return;
            }
            
            const countryFlag = countries[currentCountry].flag;
            const countryName = countries[currentCountry].name;
            
            const message = `üõí *–ù–æ–≤–∞—è –∑–∞—è–≤–∫–∞ GlobalDrop* ${countryFlag}
    
üë§ *–ò–º—è:* ${formData.name}
üìß *Email:* ${formData.email}  
üìû *–¢–µ–ª–µ—Ñ–æ–Ω:* ${formData.phone}
üåç *–°—Ç—Ä–∞–Ω–∞:* ${countryName}
üàØ *–Ø–∑—ã–∫:* ${formData.language}
‚è∞ *–í—Ä–µ–º—è:* ${new Date().toLocaleString('ru-RU')}

_–ù–µ –∑–∞–±—É–¥—å—Ç–µ –æ—Ç–≤–µ—Ç–∏—Ç—å –≤ —Ç–µ—á–µ–Ω–∏–µ 24 —á–∞—Å–æ–≤!_`;

            try {
                const response = await fetch(`https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        chat_id: TELEGRAM_CHAT_ID,
                        text: message,
                        parse_mode: 'Markdown'
                    })
                });
                
                if (!response.ok) {
                    console.warn('Telegram notification failed');
                }
            } catch (error) {
                console.error('Telegram error:', error);
            }
        }

        // ========== –ê–î–ú–ò–ù-–ü–ê–ù–ï–õ–¨ ==========
        function showAdminLogin() {
            const message = currentLanguage === 'ru' 
                ? '–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä–∞:' 
                : 'Enter admin password:';
            const errorMessage = currentLanguage === 'ru' 
                ? '–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å!' 
                : 'Wrong password!';
                
            const password = prompt(message);
            if (password === ADMIN_PASSWORD) {
                showAdminPanel();
            } else if (password !== null) {
                alert(errorMessage);
            }
        }

        function showAdminPanel() {
            document.getElementById('adminPanel').style.display = 'block';
        }

        function closeAdminPanel() {
            document.getElementById('adminPanel').style.display = 'none';
            document.getElementById('addProductForm').reset();
        }

        function addNewProduct() {
            const name = document.getElementById('productName').value;
            const description = document.getElementById('productDescription').value;
            const price = document.getElementById('productPrice').value;
            const shipping = document.getElementById('productShipping').value;
            const imageUrl = document.getElementById('productImage').value;
            const icon = document.getElementById('productIcon').value;

            // –í–∞–ª–∏–¥–∞—Ü–∏—è
            if (!name || !description || !price) {
                const message = currentLanguage === 'ru' 
                    ? '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è: –Ω–∞–∑–≤–∞–Ω–∏–µ, –æ–ø–∏—Å–∞–Ω–∏–µ –∏ —Ü–µ–Ω–∞'
                    : 'Please fill required fields: name, description and price';
                alert(message);
                return;
            }

            const newProduct = {
                id: Date.now(),
                name: name,
                description: description,
                basePrice: parseFloat(price),
                shipping: shipping,
                imageUrl: imageUrl,
                icon: icon,
                timestamp: new Date().toLocaleDateString(currentLanguage === 'ru' ? 'ru-RU' : 'en-US')
            };

            saveProductToStorage(newProduct);
            addProductToDOM(newProduct);
            
            const message = currentLanguage === 'ru' 
                ? '–¢–æ–≤–∞—Ä —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω!' 
                : 'Product successfully added!';
            alert(message);
            closeAdminPanel();
        }

        // ========== LOCALSTORAGE ==========
        function saveProductToStorage(product) {
            try {
                let products = getProductsFromStorage();
                products.push(product);
                localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
            } catch (error) {
                console.error('Error saving to localStorage:', error);
                const message = currentLanguage === 'ru' 
                    ? '–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ —Ç–æ–≤–∞—Ä–∞' 
                    : 'Error saving product';
                alert(message);
            }
        }

        function getProductsFromStorage() {
            try {
                const products = localStorage.getItem(STORAGE_KEY);
                return products ? JSON.parse(products) : [];
            } catch (error) {
                console.error('Error reading from localStorage:', error);
                return [];
            }
        }

        function loadProductsFromStorage() {
            const products = getProductsFromStorage();
            products.forEach(product => addProductToDOM(product));
        }

        // ========== –û–¢–û–ë–†–ê–ñ–ï–ù–ò–ï –¢–û–í–ê–†–û–í ==========
        function addProductToDOM(product) {
            const productsGrid = document.getElementById('productsGrid');
            if (!productsGrid) {
                console.error('Products grid element not found');
                return;
            }

            const productCard = document.createElement('div');
            productCard.className = 'product-card';
            productCard.setAttribute('data-product-id', product.id);

            let imageContent = '';
            if (product.imageUrl && product.imageUrl.trim() !== '') {
                imageContent = `<img src="${product.imageUrl}" alt="${escapeHtml(product.name)}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">`;
            }
            
            if (product.icon && product.icon.trim() !== '') {
                imageContent += `<div class="product-image-icon" style="${product.imageUrl ? 'display:none' : ''}">
                    <i class="${escapeHtml(product.icon)}"></i>
                </div>`;
            } else {
                imageContent += `<div class="product-image-icon" style="${product.imageUrl ? 'display:none' : ''}">
                    <i class="fas fa-box"></i>
                </div>`;
            }

            const learnMoreText = getTranslation('product.learn_more');
            const addedText = getTranslation('product.added');
            const removeText = getTranslation('product.remove');
            const deliveryText = getTranslation('product.delivery');

            const finalPrice = calculateFinalPrice(product.basePrice);

            productCard.innerHTML = `
                <div class="product-image">
                    ${imageContent}
                </div>
                <div class="product-info">
                    <h3 class="product-title">${escapeHtml(product.name)}</h3>
                    <p class="product-description">${escapeHtml(product.description)}</p>
                    <div class="product-price">${finalPrice}</div>
                    <div class="product-shipping">${deliveryText}: ${escapeHtml(product.shipping)}</div>
                    <div class="product-admin-info">
                        <small>${addedText}: ${escapeHtml(product.timestamp)}</small>
                        <button onclick="removeProduct(${product.id})" class="btn-remove">üóëÔ∏è ${removeText}</button>
                    </div>
                    <a href="#contact" class="btn">${learnMoreText}</a>
                </div>
            `;

            productsGrid.appendChild(productCard);
        }

        function removeProduct(productId) {
            const confirmMessage = currentLanguage === 'ru' 
                ? '–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —Ç–æ–≤–∞—Ä?' 
                : 'Are you sure you want to remove this product?';
            const successMessage = currentLanguage === 'ru' 
                ? '–¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω!' 
                : 'Product removed!';
            const errorMessage = currentLanguage === 'ru' 
                ? '–û—à–∏–±–∫–∞ –ø—Ä–∏ —É–¥–∞–ª–µ–Ω–∏–∏ —Ç–æ–≤–∞—Ä–∞' 
                : 'Error removing product';

            if (confirm(confirmMessage)) {
                // –£–¥–∞–ª—è–µ–º –∏–∑ DOM
                const productElement = document.querySelector(`[data-product-id="${productId}"]`);
                if (productElement) {
                    productElement.remove();
                }
                
                // –£–¥–∞–ª—è–µ–º –∏–∑ localStorage
                try {
                    let products = getProductsFromStorage();
                    products = products.filter(product => product.id !== productId);
                    localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
                    alert(successMessage);
                } catch (error) {
                    console.error('Error removing product:', error);
                    alert(errorMessage);
                }
            }
        }

        // ========== –í–°–ü–û–ú–û–ì–ê–¢–ï–õ–¨–ù–´–ï –§–£–ù–ö–¶–ò–ò ==========
        function setupSmoothScroll() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 120,
                            behavior: 'smooth'
                        });
                        
                        const navMenu = document.querySelector('nav ul');
                        if (navMenu && navMenu.classList.contains('show')) {
                            navMenu.classList.remove('show');
                        }
                    }
                });
            });
        }

        function setupScrollAnimations() {
            const animateOnScroll = function() {
                const elements = document.querySelectorAll('.benefit-card, .step, .product-card, .testimonial-card');
                
                elements.forEach(element => {
                    const elementTop = element.getBoundingClientRect().top;
                    const elementVisible = 150;
                    
                    if (elementTop < window.innerHeight - elementVisible) {
                        element.style.opacity = "1";
                        element.style.transform = "translateY(0)";
                    }
                });
            };
            
            const animatedElements = document.querySelectorAll('.benefit-card, .step, .product-card, .testimonial-card');
            animatedElements.forEach(element => {
                element.style.opacity = "0";
                element.style.transform = "translateY(20px)";
                element.style.transition = "opacity 0.6s ease, transform 0.6s ease";
            });
            
            window.addEventListener('load', animateOnScroll);
            window.addEventListener('scroll', animateOnScroll);
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
</body>
</html>
